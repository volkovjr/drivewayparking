<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id = "@+id/linearLayout_disputeList"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="2dp"
    android:background="@drawable/recycler_view"
    android:paddingBottom="3dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        >


        <LinearLayout
            android:id="@+id/dispute_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/black">



            <TextView
                android:id="@+id/dispute_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="dispute_id" />

            <TextView
                android:id="@+id/dispute_solved"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="dispute_solved" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
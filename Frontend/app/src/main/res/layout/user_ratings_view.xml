<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linearLayout_userRatingList"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="235sp"
    android:padding="2dp"
    android:background="@drawable/recycler_view"
    android:paddingBottom="3dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="227dp"
        android:layout_height="112dp"
        android:layout_margin="3dp"
        android:layout_marginEnd="5dp">

        <LinearLayout
            android:layout_width="231dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:orientation="vertical"
            android:padding="1.5dp">

            <TextView
                android:id="@+id/textView_comments"
                android:layout_width="402dp"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Comments"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="Accommodation Rating: "
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textView_accommodation_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="XXX"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="Safety Rating: "
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textView_safety_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="XXX"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="#FFFFFF" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:fontFamily="serif"
                    android:text="Responsiveness Rating: "
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textView_responsiveness_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="XXX"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="#FFFFFF" />
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
